{{#each movies}}
  <li class='gallery-item-card' data-id='{{id}}'>
    <div class='card'>
      <div class='poster-container'>
        <span class='film-rating'>{{rating}}</span>
        {{#if poster}}
          <img
            class='poster'
            data-source='https://image.tmdb.org/t/p/w500{{backdropPath}}'
            alt='{{title}}'
            src='https://image.tmdb.org/t/p/w500{{poster}}'
          />
        {{else}}
          <img
            src='https://cdn.pixabay.com/photo/2015/09/09/17/51/film-932154_960_720.jpg'
            alt='{{originalTitle}}'
            loading='lazy'
          />

        {{/if}}
      </div>
      <div class='text-container'>
        <h2 class='text-title'>{{title}}</h2>
        <div class='text-details'>
          <p class='text-ganre'>{{genres}}
            |
            {{releaseDate}}</p>
          <p class='text-rating is-hidden'>{{rating}}</p>
        </div>
      </div>
    </div>
  </li>
{{/each}}